{	
	"compilerOptions": {
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noImplicitAny": true,
		"module": "CommonJS",
		"target": "es2021",
		"allowJs": false,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@openexile/oe-demo": ["packages/oe-demo"],
			"@openexile/oe-board": ["packages/oe-board"],
		}
	},
	"exclude": [
		"**/jest.config.ts",
		"**/dist/**",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}